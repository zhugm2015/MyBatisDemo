<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.data.UserMapper">
    <select id="selectUserViaXML" resultType="demo.model.User">
        SELECT * FROM user WHERE id=#{id}
    </select>

    <insert id="insertUserViaXML" parameterType="demo.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(username, password) VALUES(#{username}, #{password})
    </insert>
</mapper>      